<div class="search-container">
  <h1 class="header">All products</h1>
  <div class="col-2">
    <div class="columns is-centered">
      <div class="search-cards">
        <% @line_items.each do |item| %>
        <div class="items">
          <div class="item-desc">
            <p><%= line_items.item.name %> | <%= line_items.item.price %></p>
          </div>
          <div class="button-container">
            <div style="display: inline-block;">
              <%= button_to "Add to list", add_item_line_item_path(user), class: "btn btn-outline-primary", method: :post, style: "border-radius: 20px;" %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
