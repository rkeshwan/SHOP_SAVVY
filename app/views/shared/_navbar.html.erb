<%# navbar logo right here %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "shopping-cart.png" %>
    <h1>SHOP SAVVY</h1>
    <% end %>


    <div class="pages">
      <% if user_signed_in? %>
      <%= link_to "Dashboard", dashboard_path(@dashboard), class: "nav-link" %>
      <% end %>
      <div class="nav_pages"><%= link_to "Products", search_path(@search), class: "nav-link" %></div>
      <div class="nav_pages"><%= link_to "Stores", store_path(@store), class: "nav-link" %></div>
    </div>

    <%# navbar usual code below
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>


<%# edit buttons and links along the top %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <div class="nav-item dropdown">
        <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
        <%= image_tag "#{current_user.email}.png", style: "width: 50px; height: 50px; border-radius: 100px", alt: "dropdown menu" %>
        </a>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <%= link_to "Grocery", "#", class: "dropdown-item" %>
          <%= link_to "Dashboard", dashboard_path(@dashboard), class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
        </div>
      </div>
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
        <%= link_to cart_path, class: "basket" do %>
        <%= image_tag "basket.png" %>
        <% end %>
      </ul>
      <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
